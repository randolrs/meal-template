<p id="notice"><%= notice %></p>

<h1>Meal Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meal_templates.each do |meal_template| %>
      <tr>
        <td><%= meal_template.name %></td>
        <td><%= link_to 'Show', meal_template %></td>
        <td><%= link_to 'Edit', edit_meal_template_path(meal_template) %></td>
        <td><%= link_to 'Destroy', meal_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal Template', new_meal_template_path %>
